{
    "name": "aksoftware/mr-sender-wrapper",
    "description": "send SMS and Fax with MrSender",
    "keywords": [
        "aksoftware",
        "mr-sender-wrapper"
    ],
    "homepage": "https://github.com/aksoftwaregmbh/mr-sender-wrapper",
    "license": "MIT",
    "authors": [
        {
            "name": "AK Software GmbH",
            "email": "amir@ak-software.com",
            "homepage": "https://ak-software.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-curl": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpunit/phpunit": "^9.2",
        "vimeo/psalm": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "AKSoftware\\MrSenderWrapper\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AKSoftware\\MrSenderWrapper\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
